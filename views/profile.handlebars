<div class="container mx-auto">
  <div class="flex justify-center">
    <h2 class="text-3xl font-bold pt-10 ml-8 text-black">Welcome, {{name}}!</h2>
  </div>
</div>

<div class="container mx-auto mt-4">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 border border-gray-500 rounded shadow-md p-5">
    <div class="border rounded shadow-md p-5 mx-auto flex flex-col mr-2">
      <h3 class="text-xl font-semibold mb-4">Add A New Point Of Interest:</h3>

      <form
        class="form new-project-form mb-8"
        enctype="multipart/form-data"
        action="/api/stories"
        method="POST"
      >
        <div class="form-group mb-4">
          <label for="project-name" class="font-semibold hover:underline">Point
            Of Interest:</label>
          <input class="border border-gray-400 block focus:outline-none form-input" type="text" id="project-name" name="name" />
        </div>
        <div class="form-group mb-4">
          <label
            for="project-funding"
            class="font-semibold hover:underline"
          >Cost of Activity ($):</label>
          <input
            class="border border-gray-400 block focus:outline-none form-input"
            type="number"
            id="project-funding"
            name="project-funding"
          />
        </div>
        <div class="form-group mb-4">
          <label
            for="project-desc"
            class="font-semibold hover:underline"
          >Write-Up:</label>
          <textarea
            class="border border-gray-400 block focus:outline-none form-input"
            id="project-desc"
            name="project-desc"
          ></textarea>
        </div>
        <div class="form-group mb-4">
          <label
            for="image"
            class="font-semibold hover:underline"
          >Image:</label>
          <input
            class="form-input"
            type="file"
            id="image"
            name="images"
            accept="image/*"
            multiple
          />
        </div>
        <div class="form-group mb-4">
          <button
            type="submit"
            class="btn btn-primary bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
          >Create</button>
        </div>
      </form>
    </div>

    {{#if stories.length}}
      <div class="border border-gray-500 shadow-md p-5 ml-2 rounded col-md-6 project-list">
        <h3
          class="text-xl font-semibold border-b-2 border-gray-400 pb-2 mb-4"
        >Storyboard:</h3>

        {{#each stories as |story|}}
          <div class="flex items-center mb-2">
            <div class="flex-grow">
              <h4 class="text-lg font-bold mb-2">
                <a
                  href="/stories/{{story.id}}"
                  class="text-blue-500 hover:underline"
                >{{story.name}}</a>
              </h4>
            </div>
            <div>
              <button
                class="btn btn-sm btn-danger text-purple-500 hover:underline"
                data-id="{{story.id}}"
              >
                DELETE
              </button>
            </div>
          </div>
        {{/each}}

      </div>
    {{/if}}
  </div>
</div>

<script src="/js/profile.js"></script>