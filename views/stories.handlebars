<h2 class="text-3xl font-bold pt-10 ml-8 text-black">Stories</h2>
<div class="h-1 bg-gray-300 w-55 mt-2 pl-4 ml-8"></div>
<div class="p-4 flex-col flex ml-2">

{{#each stories as |story|}}
<div class="row mb-4 project border border-gray-400 shadow-lg rounded-lg hover:scale-105 ml-2 mr-8 relative">
  <div class="bg-transparent rounded-md w-50 h-20 z-0" style="background-image: url('/images/{{this.images}}');">
    <div class="col-md-5 flex justify-between">
        <h2 class="text-2xl font-semibold py-2 px-4 text-blue-800">
          <a href="/stories/{{story.id}}" class="hover:underline">{{story.name}}</a>
        </h2>
        {{#if story.images}}
        <p class="text-sm font-bold mr-4 text-white">
          By {{story.user.name}} on {{format_date story.date_created}}
        </p>
        {{else}}
        <p class="text-sm font-bold mr-4">
          By {{story.user.name}} on {{format_date story.date_created}}
        </p>
        {{/if}}
    </div>
    <div class="col-md-7">
        <p class="text-sm py-2 px-4">
          {{story.blog}}
        </p>
    </div>
  </div>
</div>
{{/each}}

</div>