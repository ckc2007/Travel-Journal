<h2 class="text-3xl font-bold pt-10 ml-8 text-black">Stories</h2>
<div class="h-1 bg-gray-300 w-55 mt-2 pl-4 ml-8"></div>
<div class="p-4 flex-col flex ml-2">
  {{#each stories as |story|}}
    <div class="row mb-4 project border border-gray-400 shadow-lg rounded-lg hover:scale-105 ml-2 mr-8">
      <div class="relative">
        <div class="bg-transparent rounded-md w-50 h-20 absolute z-0" style="background-image: url('/images/{{story.images}}');"></div>
        <div class="col-md-5 flex justify-between relative">
          <h2 class="text-2xl font-semibold py-2 px-4 text-blue-800 relative z-10">
            <a href="/stories/{{story.id}}" class="hover:underline">{{story.name}}</a>
          </h2>
          <p class="text-sm mr-4 ">
            By {{story.user.name}} on {{format_date story.date_created}}
          </p>
        </div>
        <div class="col-md-7">
          <p class="text-sm py-2 px-4 relative z-10">
            {{story.blog}}
          </p>
        </div>
      </div>
    </div>
  {{/each}}
</div>
