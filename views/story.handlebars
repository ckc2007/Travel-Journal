<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{blog}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
    <span for="img" aria-label="money">$ </span>
    <span class="dollar-amount">{{format_amount budget}}</span>
    needed
  </p>
  {{! added image display section }}
  {{#if image}}
    <div class="image-gallery">
      <a href="/images/{{image}}" target="_blank">
        <img src="/images/{{image}}" alt="Story Image" class="gallery-image" />
      </a>
    </div>
  {{/if}}
</div>

<div id="comment-section">
  <h4>comments section</h4>
  <br />
  <div id="comments-container">
    <form id="comment-form">
      <textarea
        id="comment-textarea"
        placeholder="Write your comment here"
      ></textarea>
      <br />
      <button type="submit" id="comment-submit">Comment</button>
    </form>
    <br />
    {{#each comments}}
      <div>
        <b><p id="user-name">{{this.user.name}}</p></b>
        <i><p id="user-comment">{{this.comments}}</p></i>
      </div>
    {{/each}}
  </div>
</div>

<link rel="stylesheet" href="/css/style.css" />
<script src="/js/story.js"></script>