<div>
  {{#if images}}
  <section class="flex justify-center items-center px-6 mt-4">
   <!-- category card -->
   {{#each images}}
    <a href="/images/{{this}}" target="_blank">
      <div class="card relative border rounded-md border-gray-400 bg-gray-400">
        <img src="/images/{{this}}" alt="story image" class="w-64 h-64 rounded transform hover:scale-110 hover:-translate-x-10 hover:cursor-pointer transition duration-300 ease-in-out" />
      </div>
    </a>
    {{/each}}
  </section>
  {{/if}}

  <section class="mt-16">
        <!-- slide indicators -->
        <div class="flex mx-auto justify-center">
          <div class="h-1 w-10 bg-gray-400 mr-4"></div>
          <div class="h-1 w-10 bg-gray-400 mr-4"></div>
          <div class="h-1 w-10 bg-blue-600 mr-4"></div>
          <div class="h-1 w-10 bg-gray-400"></div>
        </div>
  </section>
</div>



<div class="comment-container">
  <div class="w-full bg-white rounded-lg border p-2 my-4 mx-6 shadow-md">
    <h3 class="font-bold">Discussion</h3>
    <form>
      <div class="w-full px-3 my-2 justify-between flex">
        <textarea
          class="bg-white rounded leading-normal resize-none w-full h-12 py-2 px-3 font-medium placeholder-gray-700 focus:outline-none focus:bg-white border-b-2"
          id="comment-textarea"
          name="body"
          placeholder="Comment Here"
          required
        ></textarea>
        <div class="flex justify-end px-1">
          <input
            type="submit"
            class="px-1 py-1 rounded-md text-white text-sm bg-black ml-2 hover:scale-105 hover:cursor-pointer"
            id="comment-submit"
            value="Post Comment"
          />
        </div>
      </div>
      {{#each comments as |comment|}}
        <div class="flex flex-col">
          <div class="rounded-md p-3 ml-3 my-3">
            <div class="flex gap-3 items-center">
              <img src="/imgs/coffee.svg" class="object-cover w-8 h-8" />
              <h3 class="font-bold">{{comment.user.name}}</h3>
            </div>
            <p class="text-gray-600 mt-2">{{comment.comments}}</p>
            {{#if comment.id}}
              <button
                data-id="{{comment.id}}"
                class="text-gray-400 mt-2 text-sm px-2 py-1 rounded-md"
                id="delcomment"
              >delete</button>
            {{else}}
              <div></div>
            {{/if}}
            <div class="border-b bg-gray-300 w-25 mt-2"></div>
          </div>
        </div>
      {{/each}}
    </form>
  </div>
</div>

